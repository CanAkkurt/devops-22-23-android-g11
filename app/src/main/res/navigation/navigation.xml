<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.test.screens.login.LoginFragment"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_loginFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.test.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_listUsersFragment"
            app:destination="@id/listUsersFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_virtualMachineListFragment"
            app:destination="@id/virtualMachineListFragment" />
    </fragment>
    <fragment
        android:id="@+id/listUsersFragment"
        android:name="com.example.test.screens.users.ListUsersFragment"
        android:label="ListUsersFragment" >
        <action
            android:id="@+id/action_listUsersFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/virtualMachineListFragment"
        android:name="com.example.test.screens.virtual_machines.VirtualMachineListFragment"
        android:label="VirtualMachineListFragment" >
        <action
            android:id="@+id/action_virtualMachineListFragment_to_virtualMachineDetailFragment"
            app:destination="@id/virtualMachineDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/virtualMachineDetailFragment"
        android:name="com.example.test.screens.virtual_machines.VirtualMachineDetailFragment"
        android:label="VirtualMachineDetailFragment" >
            <argument
                android:name="vmId"
                app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.test.screens.users.UserFragment"
        android:label="UserFragment" >
        <argument
            android:name="userId"
            app:argType="integer" />
    </fragment>
</navigation>
